@model List<footballplayers.Models.Player>
@{
    ViewData["Title"] = "Players";
}

<h1>Football Players</h1>

<p>
    <a asp-action="Add" class="btn btn-primary">Add Player</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Gender</th>
            <th>Birth Date</th>
            <th>Team</th>
            <th>Country</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var player in Model)
        {
            <tr>
                <td>@player.FirstName</td>
                <td>@player.LastName</td>
                <td>@player.Gender</td>
                <td>@player.BirthDate.ToShortDateString()</td>
                <td>@player.Team.TeamName</td>
                <td>@player.Country</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@player.PlayerId">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@player.PlayerId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
